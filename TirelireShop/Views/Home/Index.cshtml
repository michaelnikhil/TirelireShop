@model IEnumerable<TirelireShop.Produit>

@{
    ViewData["Title"] = "Home Page";
}



<div class="container">
    <div class="main-title">
        <p class="into">Bienvenue sur le Tirelire shop</p>
    </div>

    <div class="img-container">
        @foreach (var item in Model)
        {
        <div class="photo-index-card">

            <h3 class="display-picture-title">
                <a class=nav-link asp-controller="Produit" asp-action="Details" asp-route-id="@item.Idproduit">
                @Html.DisplayFor(modelItem => item.Nom)
                </a>
                
            </h3>

           /* @{ 
                Image im = item.Image.OrderByDescending(i => i.CheminAcces).SingleOrDefault();
            }*/


            @if (item.Idimage != null)
            {
                <div class="photo-display">
                    <img class="photo-display-img" src="@Url.Action("GetImage", "Home", new { Id = item.Idproduit })" />
                </div>}


        </div>
        }

    </div>


</div>