@model IEnumerable<TirelireShop.Fabricant>

@{
    ViewData["Title"] = "Liste des fabricants";
}

<div class="into">
    Liste des fabricants
</div>

<p>
    <a asp-action="Create">Ajouter un fabricant</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idfabricant">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idfabricant">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idfabricant">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
