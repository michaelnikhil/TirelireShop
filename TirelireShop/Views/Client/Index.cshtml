@model IEnumerable<TirelireShop.Client>

@{
    ViewData["Title"] = "Liste des clients";
}

<div class="into">
    Liste des clients
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatutCompte)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatutCompte)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Idclient">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Idclient">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
